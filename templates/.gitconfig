[alias]
	co = checkout
	st = status
	ci = commit
  resetauthor = commit --amend --no-edit --reset-author
	br = branch
	lg = log --oneline --decorate --graph --abbrev-commit

[color]
  diff = auto
  grep = auto
  interactive = auto
  status = auto
  branch = auto
  status = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore

[merge]
  ff = false

[pull]
  rebase = true

[github]
	user = davidbrusius

[include]
  path = ~/.gitconfig.personal

[includeIf "gitdir:~/src/ptec/"]
  path = ~/.gitconfig.work
