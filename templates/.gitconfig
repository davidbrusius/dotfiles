[alias]
  co = checkout
  st = status
  ci = commit
  lg = log --oneline --decorate --graph --abbrev-commit
  br = branch
  cm = checkout master
  cia = commit --amend --no-edit
  rc = rebase --continue
  rs = rebase --skip
  reset-author = commit --amend --no-edit --reset-author
  fetch-rebase = !git fetch origin && git rebase origin/master
  unstage = reset --soft HEAD^

[color]
  diff = auto
  grep = auto
  interactive = auto
  status = auto
  branch = auto
  status = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore

[fetch]
  prune = true

[merge]
  ff = false

[pull]
  rebase = true

[rebase]
  autosquash = true

[github]
	user = davidbrusius

[include]
  path = ~/.gitconfig.personal

[includeIf "gitdir:~/dev/magnetis/"]
  path = ~/.gitconfig.work
