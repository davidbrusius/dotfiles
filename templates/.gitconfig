[alias]
	co = checkout
	st = status
	ci = commit
  lg = log --oneline --decorate --graph --abbrev-commit
  br = branch
	cia = commit --amend --no-edit
  reset-author = commit --amend --no-edit --reset-author
  fetch-rebase = !git fetch origin --prune && git rebase origin/master

[color]
  diff = auto
  grep = auto
  interactive = auto
  status = auto
  branch = auto
  status = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore

[merge]
  ff = false

[pull]
  rebase = true

[github]
	user = davidbrusius

[include]
  path = ~/.gitconfig.personal

[includeIf "gitdir:~/src/ptec/"]
  path = ~/.gitconfig.work
